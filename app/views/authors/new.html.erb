<h1>New Author</h1>
<%= form_for :author, url: authors_path do |f| %>
  <p>
    <%= f.text_field(:first_name, placeholder: 'First name') %>
  </p>
  <p>
    <%= f.text_field(:last_name, placeholder: 'Last name') %>
  </p>
  <p>
    <%= f.text_field(:homepage, placeholder: 'Homepage') %>
  </p>
  <p>
  	<%= f.submit "Create Author" %>
  </p>
 
<% end %>