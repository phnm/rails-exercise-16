<h1>Author index</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
  </tr>
 
  <% @authors.each do |a| %>
    <tr>
      <td><%= a.name %></td>
      <td><%= link_to a.homepage, a.homepage %></td>
      <td><%= link_to 'Show', author_path(a) %></td>
      <td><%= link_to 'Edit', edit_author_path(a) %></td>
      <td><%= link_to 'Destroy', author_path(a), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
 
<%= link_to 'Add author', new_author_path %>
